{
  "name": "Task",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "memo": {
      "type": "string"
    },
    "parentId": {
      "type": "string"
    },
    "order": {
      "type": "number"
    },
    "targetTime": {
      "type": "date"
    },
    "isCompleted": {
      "type": "boolean"
    },
    "completionTime": {
      "type": "date"
    },
    "created": {
      "type": "date"
    },
    "lastUpdated": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "member": {
      "type": "belongsTo",
      "model": "Member",
      "foreignKey": "memberId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "*"
    }
  ],
  "methods": []
}
